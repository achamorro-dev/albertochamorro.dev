---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/core/base-head/base-head.component.astro';
import Footer from '../components/core/footer/footer.component.astro';
import Header from '../components/core/header/header.component.astro';
import Tag from '../components/core/tag/tag.component.astro';
import { Datetime } from '../core/datetime/datetime';

interface Props {
  article: CollectionEntry<'blog'>
} 

const {article} = Astro.props
---

<html lang="es">
  <head>
    <BaseHead title={article.data.title} description={article.data.description} image={article.data.cover.src}/>
    <style>
      .main-content {
        margin-top: 0;
      }
      .date {
        display: block;
        text-align: center;
        font-size: var(--font-size-4);
        margin: var(--size-2) auto;
        color: var(--gray-color-45);
        font-style: italic;
      }

      .tags {
        display: flex;
        justify-content: center;
        gap: var(--size-2);
        margin-bottom: var(--size-2);
      }

      h1 {
        margin: 0 auto;
        padding-bottom: var(--size-8);
        text-wrap: pretty;
      }


      .hero-image img {
        margin: 0 auto var(--size-8);
        border-radius: var(--border-radius-xl);
      }

      .article {
        margin: 0 auto;
        max-width: 768px;

      }
    </style>
  </head>

  <body>
    <Header />
    <main class="main-content">
      <span class="date">{Datetime.toHumanDate(article.data.date)}</span>
      <ul class="tags">
        {article.data.tags.map(tag => <Tag>{tag}</Tag>)}
      </ul>
      <h1>{article.data.title}</h1>
      <article class="article">
        <section class="hero-image">
          <Image src={article.data.cover} alt={article.data.alt} />
        </section>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
