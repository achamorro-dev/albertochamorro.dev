---
import Card from '../card/card.component.astro'
import OcticonRepo from '../icons/octicon-repo.component.astro'
export interface Props {
  name: string
  description: string
  url: string
  language: string
}

const { name, description, url, language } = Astro.props
---

<a href={url} target="_blank" rel="nofollow" aria-label={`Ir al repositorio de GitHub ${name}`}>
  <Card>
    <div class="content">
      <section class="title-section">
        <OcticonRepo />
        <h3>{name}</h3>
      </section>
      <p class="description">
        {description}
      </p>
      <section class="details">
        <div class:list={['language-indicator', language.toLowerCase()]}></div>
        <span>{language}</span>
      </section>
    </div>
  </Card>
</a>

<style>
  a,
  a:visited {
    text-decoration: none;
    color: inherit;
    height: 100%;
    display: block;
  }

  .content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .title-section {
    display: grid;
    align-items: center;
    grid-template-columns: 24px 1fr;
    gap: var(--size-2);
    & h3 {
      font-size: var(--font-size-5);
    }
  }

  .description {
    font-size: var(--font-size-4);
    flex: 1;
  }

  .details {
    display: flex;
    align-items: center;
    gap: var(--size-2);

    & .language-indicator {
      height: var(--size-4);
      width: var(--size-4);
      border-radius: var(--border-radius-full);
    }

    & span {
      font-size: var(--font-size-3);
    }
  }

  .dart {
    background-color: #00b4ab;
  }

  .flutter {
    background-color: #0468d7;
  }

  .vuejs {
    background-color: #41b883;
  }

  .javascript {
    background-color: #f1e05a;
  }

  .typescript {
    background-color: #3178c6;
  }

  .astro {
    background-color: #ff5a03;
  }

  .react {
    background-color: #087ea4;
  }

  .shell {
    background-color: #89e051;
  }
</style>
