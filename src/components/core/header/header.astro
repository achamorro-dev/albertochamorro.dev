---
import Logo from '../logo/logo.astro'
import MenuBar from '../menu/menu-bar.astro'
---

<header>
  <Logo />
  <MenuBar />
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    gap: var(--size-2);
    align-items: center;
    padding: var(--size-4);
    margin: 0 auto;
    width: 100%;
  }

  @media (min-width: 768px) {
    header {
      flex-direction: row;
      justify-content: space-between;
      max-width: var(--max-width-content);
    }
  }
</style>
